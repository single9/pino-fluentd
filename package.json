  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/w4567892015/pino-fluentd"
  },
  "bugs": {
    "url": "https://github.com/w4567892015/pino-fluentd/issues"
